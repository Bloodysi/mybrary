<h2 class="page-header">Books</h2>

<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOption.title%>">
        </div>
    </div>  
    <div class="form-row form-row-end btn-row">
        <a href="/books/new" class="btn btn-primary"><i class="fas fa-plus"></i></a>  
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

<br>

<div>
    <%- include('../partials/bookGrid',{books: books, large: true})%>
</div>